{
  "zls.check_for_update": false,
  "zls.debugLog": false,

  "zls.warn_style": true,
  "zls.enable_semantic_tokens": true,
  "zls.operator_completions": true,
  "zls.include_at_in_builtins": true,
  "zls.enable_ast_check_diagnostics": true,
  "zls.enable_import_embedfile_argument_completions": true,
  "zls.enable_snippets": false,
  "zls.enable_inlay_hints": false,

  "[zig]": {
    "editor.tabSize": 4,
    "editor.useTabStops": false,
    "editor.defaultFormatter": "AugusteRame.zls-vscode",
    "editor.formatOnSave": true,
  },

  "zig.buildOnSave": true,
}
